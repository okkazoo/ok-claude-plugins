{
  "name": "worklog",
  "version": "1.0.1",
  "description": "Autonomous activity tracking - logs all file changes and user tasks without relying on Claude to decide what's worth remembering",
  "author": {"name": "okkazoo"},
  "keywords": ["memory", "activity", "tracking", "context"],
  "repository": "https://github.com/okkazoo/ok-claude-plugins",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/load_context.py",
            "timeout": 5,
            "once": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/capture_task.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/capture_edit.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/session_summary.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
